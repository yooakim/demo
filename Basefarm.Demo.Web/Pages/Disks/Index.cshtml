@page
@model Basefarm.Demo.Web.Pages.Disks.IndexModel

<link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" type="text/css" />

<h2>Disks</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-striped table-bordered" id="example" style="width:100%">
    <thead>
        <tr>
            <th>
                Host
            </th>
            <th>
                Drive
            </th>
            <th>Used</th>
            <th>
                Free
            </th>
            <th>
                Size
            </th>
            <th>
                Filesystem
            </th>
            <th>
                Vol name
            </th>
            <th>
                Serial #
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LogicalDisk)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SystemName)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td align="right">@(item.Used / 1073741824)</td>

            <td align="right">@(item.FreeSpace / 1073741824)</td>
            <td align="right">@(item.Size / 1073741824)</td>
            <td>
                @Html.DisplayFor(modelItem => item.FileSystem)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.VolumeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolumeSerialNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-1.12.4.js "></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>

}
